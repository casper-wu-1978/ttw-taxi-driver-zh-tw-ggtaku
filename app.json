
{
  "expo": {
    "name": "TTW-TAXI 司機端",
    "slug": "ttw-taxi-driver",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/natively-dark.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/natively-dark.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ttwtaxi.driver",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "此應用程式需要位置權限來顯示您的當前位置並接收附近的叫車請求。",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "此應用程式需要位置權限來在背景中追蹤您的位置，以便為乘客提供準確的司機位置資訊。",
        "UIBackgroundModes": [
          "location"
        ]
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/natively-dark.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.ttwtaxi.driver",
      "versionCode": 1,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/images/final_quest_240x240.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-router",
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "此應用程式需要位置權限來顯示您的當前位置並接收附近的叫車請求。",
          "locationAlwaysPermission": "此應用程式需要位置權限來在背景中追蹤您的位置，以便為乘客提供準確的司機位置資訊。",
          "locationWhenInUsePermission": "此應用程式需要位置權限來顯示您的當前位置並接收附近的叫車請求。"
        }
      ]
    ],
    "scheme": "ttw-taxi-driver",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {}
    }
  }
}
